.post-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author-date .post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-author-date .post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin: 0 0 10px 10px;
}

.post-image{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content{
  color: #666;
  font-size: 20rpx;
  margin: 0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  font-size:13px;
  line-height: 16rpx;
  margin-left: 10px;
  flex-direction: row;
}

.post-like .post-like-image{
  width: 16px;
  height: 16px;
  margin-right:8px; 
  vertical-align: middle;
}

.post-like .post-like-font{
  margin-right: 20px;
  vertical-align: middle;
}