.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  margin-top: -55rpx;
  opacity: 0.6;
}

.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.author-date .avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author-date .author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
  vertical-align: middle;
}

.author-date .const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.author-date .date{
  font-size:24rpx;
  margin-left: 30rpx;
  color: #999;
  vertical-align: middle;
}

.title{
  font-size: 30rpx;
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool{
  margin-top: 20rpx;
}

.tool .circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.tool .circle-img image{
  width: 90rpx;
  height: 90rpx;
}

.tool .circle-img .share-img{
  margin-left: 30rpx;
}

.line{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}