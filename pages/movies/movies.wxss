.f_container{
  background-color: #f2f2f2;
}

.search {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.search-img{
  margin: auto 0 auto 20rpx;
}

.search input{
  width: 600rpx;
  height: 100%;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.placeholder{
  font-size: 18rpx;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search-panel{
  position: absolute;
  top: 80rpx;
}

.cancel-img{
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 10rpx;
  padding:25rpx 30rpx;
}
